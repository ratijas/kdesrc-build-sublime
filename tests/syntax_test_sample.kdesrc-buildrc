#          ^^^^^^ string.quoted.kdesrc-build
end module
# ^^^^^^^^ meta.block.module.kdesrc-build keyword.other.region.kdesrc-build

# <- - meta.block

options kcoreaddons
# <- meta.block.options.kdesrc-build keyword.other.region.kdesrc-build
# ^^^^^ meta.block.options.kdesrc-build keyword.other.region.kdesrc-build
